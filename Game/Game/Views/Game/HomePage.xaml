<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.HomePage"
             >

    <ContentPage.Content>
        <StackLayout
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"
            >

            <Image
                Source="splashscreen.jpg"
                WidthRequest="200"
                HeightRequest="100"
                HorizontalOptions="Center"
                />
            
            <Label 
                Text="In a far away land there was tribe of warrior elves. The elves entered the woods to eraticate the monsters that threatened their villages."
                Style="{StaticResource CenterMessageStyle}"
                LineBreakMode="WordWrap"
                Padding="40,5,40,5"
                />

            <Button
                Text="Enter"
                Clicked="GameButton_Clicked"
                />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>