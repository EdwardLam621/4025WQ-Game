<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.GamePage"
             >

    <ContentPage.Content>
        <StackLayout
            Style="{StaticResource HorizontalStack}"
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"
            >

            <StackLayout Style="{StaticResource CardImageTextBox}">

                <ImageButton
                    Source="village.png"
                    Clicked="VillageButton_Clicked"
                />

                <Label 
                    Text="Village"
                    Style="{StaticResource CenterHeaderStyle}"
                    />

            </StackLayout>

            <StackLayout Style="{StaticResource CardImageTextBox}">

                <ImageButton
                    Source="dungeon_door.png"
                    Clicked="DungeonButton_Clicked"
                    />

                <Label 
                    Text="Dungeon"
                    Style="{StaticResource CenterHeaderStyle}"
                    />
                
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>