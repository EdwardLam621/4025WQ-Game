<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Game.Views.GamePage"
             >

    <ContentPage.Content>
        <StackLayout
            VerticalOptions="CenterAndExpand"
            HorizontalOptions="CenterAndExpand"
            Orientation="Horizontal"
            >

            <StackLayout 
                Orientation="Vertical"
                HorizontalOptions="FillAndExpand"
                HeightRequest="200"
                WidthRequest="100">

                <ImageButton
                Source="village.png"
                HorizontalOptions="Center"
                Clicked="VillageButton_Clicked"
                BackgroundColor="Bisque"
                HeightRequest="100"
                WidthRequest="100"
                />

                <Label 
                    Text="Village"
                    FontSize="Medium"
                    TextColor="DarkGray"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    />

            </StackLayout>

            <StackLayout 
                Orientation="Vertical"
                HorizontalOptions="FillAndExpand"
                HeightRequest="200"
                WidthRequest="100">
                
                <ImageButton
                    Source="dungeon_door.png"
                    HorizontalOptions="Center"
                    Clicked="DungeonButton_Clicked"
                    BackgroundColor="Bisque"
                    HeightRequest="100"
                    WidthRequest="100"
                    />

                <Label 
                    Text="Dungeon"
                    FontSize="Medium"
                    TextColor="DarkGray"
                    FontAttributes="Bold"
                    HorizontalTextAlignment="Center"
                    />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>